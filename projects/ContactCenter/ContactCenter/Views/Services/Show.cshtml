@model ServiceItem
@{
    ViewBag.Title = Model.MetaTitle;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Keywords = Model.MetaKeywords;
}

<div>
    <h2>@Model.Title</h2>
</div>
<div>
    <form asp-area="" asp-controller="Services" asp-action="@Model.MetaDescription" method="post" enctype="multipart/form-data">
        <div class="div-box">
            <input asp-for="MetaKeywords" />
            <input type="submit" value="@Model.MetaTitle"/>
        </div>
    </form>
</div>